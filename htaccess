#Order deny,allow
#Allow from all 
# interdit à tout le monde sauf
# TODO: autoriser seulement aux IP de l'équipe durant le concours
#Allow from 123.45.6.7
#Allow from 13.37
# Toutes les adresses IP commençant par 13.37

RewriteEngine On
RewriteRule    ^(Accueil|Error|Propos|Faq)/?$    Web/index.php?page=main&action=$1    [NC,L]
RewriteRule    ^User/(Create|Connect|ReadAll|Read|Update)/?$    Web/index.php?page=user&action=$1    [NC,L]
RewriteRule    ^User/(Read|Update|Delete)/([A-Za-z0-9_-]+)/?$    Web/index.php?page=user&action=$1&login=$2    [NC,L]
RewriteRule    ^Participation/(Create|ReadAll)/?$    Web/index.php?page=participant&action=$1    [NC,L]
RewriteRule    ^Participation/(Read|Update|Delete)/([A-Za-z0-9_-]+)/([0-9]+)/?$    Web/index.php?page=participant&action=$1&nom=$2&idEvent=$3    [NC,L]
RewriteRule    ^Evenement/(Create|ReadAll)/?$    Web/index.php?page=event&action=$1    [NC,L]
RewriteRule    ^Evenement/(Read)/([A-Za-z0-9_-]+)/?$    Web/index.php?page=event&action=$1&id=$2    [NC,L]